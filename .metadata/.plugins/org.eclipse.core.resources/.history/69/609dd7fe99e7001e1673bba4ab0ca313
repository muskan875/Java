package com.jpa.shop.Service;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jpa.shop.Dto.BrandDto;
import com.jpa.shop.Dto.ItemDto;
import com.jpa.shop.Entity.Brand;
import com.jpa.shop.Entity.Item;
import com.jpa.shop.Repository.BrandRepository;

@Service
public class BrandService {
	
	@Autowired
	private BrandRepository brandRepository;

	public Brand addBrands(BrandDto branddto) {
	    Brand brand = new Brand();
	    brand.setName(branddto.getName());
	    
	    List<Item> itemList = new ArrayList<>();
	    for(ItemDto obj : branddto.getItems()) {
	        Item item = new Item();
	        item.setName(obj.getName());
	        item.setPrice(obj.getPrice());
	        item.setBrand(brand);
	        itemList.add(item);
	    }
	    brand.setItems(itemList);
	    
	    return brandRepository.save(brand);
	}

	
	public List<Brand> getAllBrands(){
		List<Brand> brand = (List<Brand>) brandRepository.findAll();
		return brand;
	}
}
