package com.jpa.admin.Service;

import java.util.List;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jpa.admin.Dto.loginDto;
import com.jpa.admin.Entity.Admin;
import com.jpa.admin.Repository.AdminRepository;

@Service
public class AdminService {

	@Autowired
	private AdminRepository adminRepository;
	
	@Autowired
	private ModelMapper modelMapper;
	
	public Admin DtoToAdmin(loginDto admindto) {
		Admin admin = this.modelMapper.map(admindto, Admin.class);
		return adminRepository.save(admin);
	}
	
	public List<Admin> getAllAdmins(){
		List<Admin> admin = adminRepository.findAll();
		return admin;
	}
}
